  <% @ideas.each do |idea| %>
  <div class="container">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="up_down">
              <button type="button" class="btn btn-success btn-default"><span class="glyphicon glyphicon-thumbs-up">23</i></button>
              <%= idea.likes.length %>
              <button type="button" class="btn btn-danger btn-default"><span class="glyphicon glyphicon-thumbs-down">15</i></button>
          </div>
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse<%= idea.id %>"><%= idea.topic %></a>
          </h4>
          <p>User Name - <%= idea.created_at.strftime('%d.%m.%Y %H:%M ') %></p>
        </div>
        <div id="collapse<%= idea.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <p><%= idea.text %></p>
          </div>
          <div class="panel-footer">
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse<%= idea.id + @ideas.count %>">Comments (<%= idea.comments.count %>)</a>
                  </h4>
                </div>
                <div id="collapse<%= idea.id + @ideas.count %>" class="panel-collapse collapse">
                  <% idea.comments.each do |comment| %>
                    <div class="panel-body">
                      <p>User Name - <%= comment.time.strftime('%d.%m.%Y %H:%M ') %></p>
                      <div class="panel-footer">
                        <p><%= comment.text %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>


