<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-10">
      <h1>Listing Ideas</h1>
    </div>
    <div class="col-sm-2">
      <button type="button" class="btn btn-primary"><%= link_to 'Post Idea', new_idea_path %></button>
    </div>
  </div>

  <ul class="nav nav-tabs nav-justified">
    <% Basket.all.each do |basket| %>
      <%if basket.name == "New" or basket.name == "Rejected"
          %><%
        else %>
          <% if basket.name == 'Approved'%>
            <li role="presentation" class="active">
              <%= link_to basket.name, ideas_path(basket: basket.name )%>
            </li>
          <% else %>
            <li role="presentation">
              <a href="">
                <%= link_to basket.name, ideas_path(basket: basket.name )%>
              </a>
            </li>
          <% end %>
      <%end%>
    <% end %>
  </ul>

  <div class="center tags">
    <% Tag.all.each do |menutag| %>
      <label class="checkbox-inline"><input type="checkbox" value="">
      <%= menutag.text %>
      </label>
    <% end %>
  </div>
</div>

<!--<% approved = Basket.second.ideas %>-->

<% @ideas.each do |idea| %>
  <div class="container">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-sm-9">
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse<%= idea.id * 2 %>"><%= idea.topic %></a>
              </h4>
              <p><%= User.find(idea.histories.first.user_id).name %> - <%= idea.created_at.strftime('%d.%m.%Y %H:%M ') %></p>
              <%if idea.tags.empty?
                else%>
                  <p>Tags: 
                  <% idea.tags.each do |tag| %>
                    <%= tag.text %>
                    <% if tag == idea.tags.last%>
                    <% else%>
                    , 
                    <%end%>
                  <%end%>
                </p>
              <%end%>
            </div>
            <div class="<up_down. col-sm-3 center">
              <% likes = 0 %>
              <% dislikes = 0 %>
              <% idea.likes.each do |like| %>
                <% a = Like.find(idea.id).like_type() 
                    if a == 'like'
                      likes = likes + 1
                    else
                      dislikes = dislikes + 1
                    end
                %>
              <% end %>
              <span class="total-likes">
                <%= likes - dislikes %>
              </span><br>
              <button type="button" class="btn btn-success btn-md"><span class="glyphicon glyphicon-thumbs-up"></span> <%= likes %></button>
              <button type="button" class="btn btn-danger btn-md"><span class="glyphicon glyphicon-thumbs-down"></span> <%= dislikes %></button>
            </div>
          </div>
        </div>
        <div id="collapse<%= idea.id * 2 %>" class="panel-collapse collapse">
          <div class="panel-body">
            <p><%= idea.text %></p>
          </div>
          <div class="panel-footer">
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse<%= idea.id * 2 +1 %>">Comments (<%= idea.comments.count %>)</a>
                  </h4>
                </div>
                <div id="collapse<%= idea.id * 2 + 1 %>" class="panel-collapse collapse">
                  <% idea.comments.each do |comment| %>
                    <div class="panel-body">
                      <a href="">
                        <i class="glyphicon glyphicon-flag flag"></i>
                      </a>
                      <p><%= User.find(comment.user_id).name %> - <%= comment.time.strftime('%d.%m.%Y %H:%M ') %></p>
                      <div class="panel-footer">
                        <p><%= comment.text %></p>
                      </div>
                    </div>
                  <% end %>
                  <% if not session[:user_id].nil? %>
                    <div class="panel-body">
                      <div class="form-group">
                        <!--<label for="comment">Comment:</label>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                        <button type="button" class="btn btn-primary">Send</button>-->
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="center">
              <a data-toggle="collapse" href="#collapse<%= idea.id * 2 %>">
                <span class="glyphicon glyphicon-menu-up"></span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>