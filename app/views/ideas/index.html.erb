<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-10">
      <h1>Listing Ideas</h1>
    </div>
    <div class="col-sm-2">
      <button type="button" class="btn btn-primary"><%= link_to 'Post Idea', new_idea_path %></button>
    </div>
  </div>
  <!-- Example of baskets -->

  <ul class="nav nav-tabs nav-justified">
    <% baskets = Basket.all %>
    <% baskets.each do |basket| %>
      <%if basket.name == "New" or basket.name == "Rejected"
          %><%
        else %>
          <li role="presentation">
            <a href="">
              <%= basket.name %>
            </a>
          </li>
        <%end
      %>
      <!--<li role="presentation">
        <a href="">
          <%= basket.name %>
        </a>
      </li>-->
    <% end %>
  </ul>
  <!-- End of example -->
  
  <!-- Example of mods baskets -->
