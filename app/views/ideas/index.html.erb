<!-- Container for top bar -->
<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-10">
      <h1>Listing Ideas</h1>
    </div>
    <% if current_user %>
    <div class="col-sm-2">
        <%= link_to 'Post Idea', new_idea_path, :class => 'btn btn-primary'%>
    </div>
    <% end %>
  </div>

  <!-- Show baskets -->
  <ul class="nav nav-tabs nav-justified">
    <% if not session[:user_id].nil? and current_user.moderator %>
      <li <% if current_page?(ideas_path(basket: "New")) -%>class="active"<% end -%>><%= link_to 'New ideas', ideas_path(basket: "New" )%></li>
    <% end %>
      <li <% if current_page?(ideas_path(basket: "Approved")) -%>class="active"<% end -%>><%= link_to 'Approved ideas', ideas_path(basket: "Approved" )%></li>
      <li <% if current_page?(ideas_path(basket: "Changing")) -%>class="active"<% end -%>><%= link_to 'Changing ideas', ideas_path(basket: "Changing" )%></li>
      <li <% if current_page?(ideas_path(basket: "Changed")) -%>class="active"<% end -%>><%= link_to 'Changed ideas', ideas_path(basket: "Changed" )%></li>
      <li <% if current_page?(ideas_path(basket: "Not Changed")) -%>class="active"<% end -%>><%= link_to 'Not Changed ideas', ideas_path(basket: "Not Changed" )%></li>
    <% if not session[:user_id].nil? and current_user.moderator %>
      <li <% if current_page?(ideas_path(basket: "Rejected")) -%>class="active"<% end -%>><%= link_to 'Rejected ideas', ideas_path(basket: "Rejected" )%></li>
    <% end %>
  </ul>
  <!-- End baskets -->

  <!-- Show tags -->
  <div class="center tags">
        <%= t :greeting %> <!-- TESTIKENTTÃ„ LOKALISAATIOTA VARTEN -->
        <p>
<%= link_to_unless I18n.locale == :en, "English", language_english_path %>
|
<%= link_to_unless I18n.locale == :fin, "Finnish", language_finnish_path %>
|
<%= link_to_unless I18n.locale == :swe, "Svenska", language_swedish_path %>
</p>
    <% Tag.all.each do |menutag| %>
      <label class="checkbox-inline"><input type="checkbox" value="">
      <%= menutag.text %>
      </label>
      <% if menutag == Tag.find(4)%>
        <br>
      <% end %>
    <% end %>
  </div>
  <!-- End tags -->
</div>
<!-- End top bar -->

<!-- Show every idea -->
<%= render 'layouts/list_ideas'%>
<!-- End show every idea -->
