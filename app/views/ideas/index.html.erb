  <thead>
    <tr>
      <th>Topic</th>
      <th>Text</th>
      <th>Basket</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.topic %></td>
