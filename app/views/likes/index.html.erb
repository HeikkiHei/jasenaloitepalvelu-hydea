<p id="notice"><%= notice %></p>

<h1>(t :like)</h1>

<table>
  <thead>
    <tr>
      <th>(t :like)</th>
      <th>(t :user)</th>
      <th>(t :idea)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like| %>
      <tr>
        <td><%= like.like_type %></td>
        <td><%= like.user_id %></td>
        <td><%= like.idea_id %></td>
        <td><%= link_to (t :show), like %></td>
        <td><%= link_to (t :edit), edit_like_path(like) %></td>
        <td><%= link_to (t :delete), like, method: :delete, data: { confirm: (t :are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to ((t :new) + " " + (t :like)), new_like_path %>
