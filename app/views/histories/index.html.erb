<p id="notice"><%= notice %></p>

<h1>Listing Histories</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Basket</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.time %></td>
        <td><%= history.basket %></td>
        <td><%= history.user.name %></td>
        <td><%= link_to (t :show), history %></td>
        <td><%= link_to (t :edit), edit_history_path(history) %></td>
        <td><%= link_to (t :destroy), history, method: :delete, data: { confirm: (t :are_you_sure)} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t :new) + " " + (t :history) , new_history_path %>
