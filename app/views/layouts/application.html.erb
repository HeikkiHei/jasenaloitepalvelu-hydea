<!DOCTYPE html>
<html>
<head>
  <title>Hydea</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if not session[:user_id].nil? %>
	  <p><%= User.find(session[:user_id]).name %> signed in</p>
	  <% end %>
	  <br>
	  <%= link_to 'New ideas', ideas_path(basket: "New" )%>
	  <%= link_to 'Approved ideas', ideas_path(basket: "Approved" )%>
<%= yield %>

</body>
</html>
